CREATE TABLE singers (
  id INTEGER PRIMARY KEY,
  name TEXT,
  song TEXT,
  country TEXT
);

CREATE TABLE albums (
  id INTEGER PRIMARY KEY,
  singer_id INTEGER,
  album_name TEXT,
  release_year INTEGER);

